<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.goals.any? %>
      <h3>goals (<%= @user.goals.count %>)</h3>
      <ol class="goals">
        <%= render @goals %>
      </ol>
      <%= will_paginate @goals %>
    <% end %>
  </div>
</div>